<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todas las Casas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Listado de todas las casas</h2>
            <div>
                <a href="/auth/sesion" class="btn btn-secondary">Volver a mis datos</a>
                <a href="/auth/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
        
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Propietario</th>
                </tr>
            </thead>
            <tbody>
                <% casas.forEach(function(casaItem){ %>
                    <tr>
                        <th scope="row"><%= casaItem.id %></th>
                        <td><%= casaItem.nombre %></td>
                        <td>$<%= casaItem.valor %></td>
                        <td>
                            <img src="<%= casaItem.imagenURL %>" alt="Imagen de <%= casaItem.nombre %>" width="100" class="img-thumbnail">
                        </td>
                        <td><%= casaItem.username %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>